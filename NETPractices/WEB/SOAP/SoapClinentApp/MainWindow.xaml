<Window
    x:Class="SoapClinentApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ModelLibrary.Models;assembly=ModelLibrary"
    xmlns:viewModels="clr-namespace:SoapClinentApp.ViewModels"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewModels:CalculatorViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Number 1:" />
            <TextBox
                Width="100"
                Margin="5"
                Text="{Binding FirstNumber}" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Margin="10"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="Number 2:" />
            <TextBox
                Width="100"
                Margin="5"
                Text="{Binding SecondNumber}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="10"
            Orientation="Horizontal">
            <Button
                Width="80"
                Command="{Binding AddCommand}"
                Content="Add" />
            <Button
                Width="80"
                Margin="5"
                Command="{Binding SubstractCommand}"
                Content="Subtract" />
            <Button
                Width="80"
                Command="{Binding MultiplyCommand}"
                Content="Multiply" />
            <Button
                Width="80"
                Margin="5"
                Command="{Binding DivideCommand}"
                Content="Divide" />
        </StackPanel>

        <TextBlock
            x:Name="LblResult"
            Grid.Row="3"
            Margin="10"
            FontSize="16"
            FontWeight="Bold"
            Text="{Binding Result}" />

        <ListView
            x:Name="UsersListView"
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="1">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:User}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Email}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
